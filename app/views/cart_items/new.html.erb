
商品名:<%= @product.name %><br>
価格:<%= @product.price %><br>
<%= form_for @cart_item, url: {action: :create} do |pro|%>
    <%= pro.hidden_field :product_id, :value => @product.id %>
    <%= pro.hidden_field :cart_id, :value => current_cart.id %>
    <%= pro.label :qty, '数量' %>
    <%= pro.number_field :qty, in: 1.0..10, step: 1 %>
    <%= pro.submit '追加' %>

<% end %>
